                           </GridPane.margin>
                        </PasswordField>
                        <CheckBox mnemonicParsing="false" text="Ver Contraseña" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP">
